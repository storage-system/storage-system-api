{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "infrastructure/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./infrastructure/services/email/templates/*.html",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}