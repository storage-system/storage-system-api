{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals",
      "multer"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}